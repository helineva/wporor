

<h2>
  <%= @beerclub.to_s %>
</h2>

<p>
  Founded: <%= @beerclub.founded %>
</p>

<h3>
  Members:
</h3>
<ul>
<% @beerclub.members.each do |member| %>
  <li><%= link_to member.username, member %></li>
<% end %>
</ul>

<% if current_user %>
  <% if @is_member %>
    <%= form_for(@membership, method: "delete") do |f| %>
      <%= f.hidden_field :beerclub_id %>
      <%= f.submit value:"end the membership", class:'btn btn-primary' %>
    <% end %>
  <% else %>
    <%= form_for(@membership) do |f| %>
      <%= f.hidden_field :beerclub_id %>
      <%= f.submit value:"join the club", class:'btn btn-primary' %>
    <% end %>
  <% end %>
  <%= link_to 'Edit', edit_beerclub_path(@beerclub), class:'btn btn-primary' %>
  <%= link_to 'Destroy', @beerclub, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
<% end %>
